@model Project
@{
    ViewData["Title"] = "Details";
}



<div class="inside-sec blog">
    <!-- BIO AND SKILLS -->
    <h5 class="tittle">BLOG POST</h5>

    <!-- Blog -->
    <article class="blog-post width-100 padding-25">
        <div class="post-img">
            <img src="~/uploads/images/portfolio/5/@Model.ImagePath" >
            <span class="date-in">@Model.CreatedData</span>
        </div>

        <!-- BLOG DETAIL -->
        <h4 class="font-normal">@Model.ProjectName.</h4>
        <span class="post-bt">by <span class="text-color-primary">Anar</span></span>
        <ul class="post-info">
            
            <li> <i class="fa fa-bookmark-o"></i>@Model.ProjectType </li>
        </ul>
        <p>
       @Model.Description
        </p>
       



       
           
     


    </article>
</div>




