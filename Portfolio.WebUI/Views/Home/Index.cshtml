@model HomeViewModel
@{
    ViewData["Title"] = "About";
}



<div role="tabpanel" class="tab-pane fade active in" id="about-me">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">About Me</h5>

        <!-- Blog -->
        <section class="about-me padding-top-10">

            <!-- Personal Info -->
            
            <ul class="personal-info">
                <li>
                    <p> <span> Name</span> @Model.Aboutme.Name </p>
                </li>
                <li>
                    <p> <span> Age</span> @Model.Aboutme.Age </p>
                </li>
                <li>
                    <p> <span> Location</span> @Model.Aboutme.Location </p>
                </li>
                <li>
                    <p> <span> Experience</span> @Model.Aboutme.Experience </p>
                </li>
                <li>
                    <p> <span> Degree</span> @Model.Aboutme.Degree </p>
                </li>
                <li>
                    <p> <span> Career Level</span> @Model.Aboutme.CareerLevel </p>
                </li>
                <li>
                    <p> <span> Phone</span> @Model.Aboutme.Phone </p>
                </li>
                <li>
                    <p> <span> FAX</span> @Model.Aboutme.Fax </p>
                </li>
                <li>
                    <p> <span> E-mail</span> <a href="#."> @Model.Aboutme.Email</a> </p>
                </li>
                <li>
                    <p> <span> Website</span><a href="#."> @Model.Aboutme.Website </a></p>
                </li>
            </ul>

            <!-- I’m Web Designer -->
            <h5 class="tittle">@Model.Aboutme.Title</h5>
            <div class="padding-20">
                <p>
                    @Model.Aboutme.Description
                </p>
            </div>

            <!-- Services -->
            <h5 class="tittle">Services</h5>
            <div class="row padding-20 margin-top-50">
                @foreach (var item in Model.Services)
                {
                    <!-- Icon -->
                    <div class="col-md-4 text-center">
                        <div class="icon-box i-large ib-black">
                            <div class="ib-icon"> <i class="@item.Icons.FirstOrDefault(c=>c.ServiceId==item.Id).Icons" aria-hidden="true"></i> </div>
                            <div class="ib-info">
                                <h4 class="h6">@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                }


            </div>

         

            <!-- Skills -->
            <h5 class="tittle">Skills</h5>

            <!-- Sound Engineering -->
            <div class="panel-group accordion padding-20" id="accordion">
                @foreach (var item in Model.Skills.Where(c => c.IsHardSkill == false))
                {
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading">
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion5" href="#@item.Id"> @item.SkillsName</a> </h4>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillsPercentage;"> <span class="sr-only">60% Complete</span> </div>
                                </div>

                                <!-- Skillls Text -->
                                <div id="@item.Id" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        @Html.Raw(item.SkillsDescription)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }



                <!-- Business Administration -->


            </div>
        </section>
    </div>
</div>